{
  "name": "multi-region-resilient-observability",
  "description": "Multi-region, multi-account deployment with shared services and workloads",
  "defaultRegion": "us-east-1",
  "defaultTags": {
    "Project": "resilient-observability",
    "Environment": "production",
    "ManagedBy": "pulumi"
  },
  "stacks": {
    "shared-services-infra-primary": {
      "workDir": "./shared-services/infra",
      "stackName": "shared-services-infra-primary",
      "configFile": "Pulumi.shared-services-infra-primary.yaml",
      "description": "Shared services infrastructure in primary region (us-east-1)",
      "roleArn": "${SHARED_SERVICES_ROLE_ARN}",
      "escEnvironments": ["namecheap-credentials"],
      "components": {
        "primary-ipam": {
          "type": "ipam",
          "config": {
            "region": "us-east-1",
            "ipamCidrBlocks": ["10.0.0.0/8"],
            "ipamOperatingRegions": ["us-east-1", "us-west-2"],
            "ipamRegionalPoolNetmask": 12,
            "ipamVpcAllocationNetmask": 16
          }
        },
        "primary-tgw": {
          "type": "transit-gateway",
          "config": {
            "region": "us-east-1",
            "asn": 64512,
            "enableRouteTableIsolation": true,
            "routingGroups": {
              "production": {
                "description": "Production workloads",
                "allowedGroups": [],
                "tags": {
                  "Environment": "Production",
                  "Criticality": "Critical"
                }
              }
            }
          },
          "notes": "To add more routing groups (dev, test, staging), add them to routingGroups. Hub is automatic. Example: 'development': { 'allowedGroups': ['test'] }"
        },
        "primary-hub-vpc": {
          "type": "hub-vpc",
          "config": {
            "region": "us-east-1"
          },
          "notes": "CIDR automatically allocated from IPAM pool (10.0.0.0/8) with /16 netmask"
        },
        "primary-shared-eks": {
          "type": "shared-eks",
          "config": {
            "region": "us-east-1",
            "clusterName": "shared-monitoring-cluster"
          }
        },
        "primary-dns": {
          "type": "dns",
          "config": {
            "region": "us-east-1",
            "baseDomain": "internal.srelog.dev",
            "parentDomain": "srelog.dev",
            "enableCertificates": true,
            "certificateValidationMethod": "namecheap"
          },
          "notes": "Creates private Route53 zone and ACM certificate. Requires Namecheap credentials in Pulumi ESC environment 'namecheap-credentials'"
        }
      },
      "tags": {
        "Region": "us-east-1",
        "AccountType": "shared-services",
        "IsPrimary": "true"
      }
    },
    "shared-services-infra-secondary": {
      "workDir": "./shared-services/infra",
      "stackName": "shared-services-infra-secondary",
      "configFile": "Pulumi.shared-services-infra-secondary.yaml",
      "description": "Shared services infrastructure in secondary region (us-west-2)",
      "dependencies": ["shared-services-infra-primary"],
      "roleArn": "${SHARED_SERVICES_ROLE_ARN}",
      "escEnvironments": ["namecheap-credentials"],
      "components": {
        "secondary-tgw": {
          "type": "transit-gateway",
          "config": {
            "region": "us-west-2",
            "asn": 64513,
            "enableRouteTableIsolation": true,
            "routingGroups": {
              "production": {
                "description": "Production workloads",
                "allowedGroups": [],
                "tags": {
                  "Environment": "Production",
                  "Criticality": "Critical"
                }
              }
            }
          },
          "notes": "To add more routing groups (dev, test, staging), add them to routingGroups. Hub is automatic. Example: 'development': { 'allowedGroups': ['test'] }"
        },
        "secondary-hub-vpc": {
          "type": "hub-vpc",
          "config": {
            "region": "us-west-2"
          },
          "notes": "CIDR automatically allocated from IPAM pool (10.0.0.0/8) with /16 netmask"
        },
        "secondary-shared-eks": {
          "type": "shared-eks",
          "config": {
            "region": "us-west-2",
            "clusterName": "shared-monitoring-cluster-secondary"
          }
        },
        "secondary-dns": {
          "type": "dns",
          "config": {
            "region": "us-west-2",
            "baseDomain": "internal.srelog.dev",
            "parentDomain": "srelog.dev",
            "enableCertificates": true,
            "certificateValidationMethod": "namecheap"
          },
          "notes": "Creates private Route53 zone and ACM certificate. Requires Namecheap credentials in Pulumi ESC environment 'namecheap-credentials'"
        }
      },
      "tags": {
        "Region": "us-west-2",
        "AccountType": "shared-services",
        "IsPrimary": "false"
      }
    },
    "shared-services-apps-primary": {
      "workDir": "./shared-services/apps",
      "stackName": "shared-services-apps-primary",
      "configFile": "Pulumi.shared-services-apps-primary.yaml",
      "description": "Shared services applications in primary region (us-east-1)",
      "dependencies": ["shared-services-infra-primary"],
      "roleArn": "${SHARED_SERVICES_ROLE_ARN}",
      "escEnvironments": ["cloudflare-credentials"],
      "components": {
        "primary-cloudflare-tunnel": {
          "type": "cloudflare-tunnel",
          "config": {
            "region": "us-east-1",
            "enableCloudflareTunnel": true,
            "cloudflareTunnelReplicas": 2
          },
          "notes": "Deploys cloudflared to provide secure access via WARP. Requires cloudflareTunnelToken in Pulumi ESC"
        },
        "primary-observability": {
          "type": "observability",
          "config": {
            "region": "us-east-1",
            "enableObservability": true,
            "loki": {
              "enabled": true
            },
            "tempo": {
              "enabled": true
            },
            "mimir": {
              "enabled": true
            },
            "grafana": {
              "enabled": true
            },
            "otelCollector": {
              "enabled": true
            }
          },
          "notes": "Deploys full observability stack: Loki (logs), Tempo (traces), Mimir (metrics), Grafana, and OTel Collector"
        }
      },
      "tags": {
        "Region": "us-east-1",
        "AccountType": "shared-services",
        "IsPrimary": "true"
      }
    },
    "shared-services-apps-secondary": {
      "workDir": "./shared-services/apps",
      "stackName": "shared-services-apps-secondary",
      "configFile": "Pulumi.shared-services-apps-secondary.yaml",
      "description": "Shared services applications in secondary region (us-west-2)",
      "dependencies": ["shared-services-infra-secondary", "shared-services-apps-primary"],
      "roleArn": "${SHARED_SERVICES_ROLE_ARN}",
      "escEnvironments": ["cloudflare-credentials"],
      "components": {
        "secondary-cloudflare-tunnel": {
          "type": "cloudflare-tunnel",
          "config": {
            "region": "us-west-2",
            "enableCloudflareTunnel": true,
            "cloudflareTunnelReplicas": 2
          },
          "notes": "Deploys cloudflared to provide secure access via WARP. Uses same tunnel token as primary for multi-region redundancy"
        },
        "secondary-observability": {
          "type": "observability",
          "config": {
            "region": "us-west-2",
            "enableObservability": true,
            "loki": {
              "enabled": true
            },
            "tempo": {
              "enabled": true
            },
            "mimir": {
              "enabled": true
            },
            "grafana": {
              "enabled": true
            },
            "otelCollector": {
              "enabled": true
            }
          },
          "notes": "Deploys full observability stack: Loki (logs), Tempo (traces), Mimir (metrics), Grafana, and OTel Collector"
        }
      },
      "tags": {
        "Region": "us-west-2",
        "AccountType": "shared-services",
        "IsPrimary": "false"
      }
    },
    "workloads-primary": {
      "workDir": "./workloads",
      "stackName": "workloads-primary",
      "configFile": "Pulumi.workloads-primary.yaml",
      "description": "Workloads in primary region (us-east-1)",
      "dependencies": ["shared-services-infra-primary"],
      "roleArn": "${WORKLOADS_ROLE_ARN}",
      "components": {
        "primary-spoke-vpc": {
          "type": "spoke-vpc",
          "config": {
            "region": "us-east-1",
            "routingGroup": "production"
          },
          "notes": "CIDR automatically allocated from IPAM pool (10.0.0.0/8) with /16 netmask"
        },
        "primary-workload-eks": {
          "type": "workload-eks",
          "config": {
            "region": "us-east-1",
            "clusterName": "workload-cluster"
          }
        },
        "primary-rds-global": {
          "type": "rds-global",
          "config": {
            "region": "us-east-1",
            "globalClusterIdentifier": "workload-global-db",
            "isPrimary": true
          }
        },
        "route53-failover": {
          "type": "route53",
          "config": {
            "hostedZone": "workloads.example.com"
          }
        },
        "primary-observability-agent": {
          "type": "observability-agent",
          "config": {
            "region": "us-east-1",
            "enableOTelAgent": true,
            "otelCollectorReplicas": 2
          },
          "notes": "Deploys OTel Collector agents in workload cluster to send telemetry to shared-services observability stack"
        }
      },
      "tags": {
        "Region": "us-east-1",
        "AccountType": "workloads",
        "IsPrimary": "true"
      }
    },
    "workloads-secondary": {
      "workDir": "./workloads",
      "stackName": "workloads-secondary",
      "configFile": "Pulumi.workloads-secondary.yaml",
      "description": "Workloads in secondary region (us-west-2)",
      "dependencies": ["shared-services-infra-secondary", "workloads-primary"],
      "roleArn": "${WORKLOADS_ROLE_ARN}",
      "components": {
        "secondary-spoke-vpc": {
          "type": "spoke-vpc",
          "config": {
            "region": "us-west-2",
            "routingGroup": "production"
          },
          "notes": "CIDR automatically allocated from IPAM pool (10.0.0.0/8) with /16 netmask"
        },
        "secondary-workload-eks": {
          "type": "workload-eks",
          "config": {
            "region": "us-west-2",
            "clusterName": "workload-cluster-secondary"
          }
        },
        "secondary-rds-global": {
          "type": "rds-global",
          "config": {
            "region": "us-west-2",
            "globalClusterIdentifier": "workload-global-db",
            "isPrimary": false
          }
        },
        "secondary-observability-agent": {
          "type": "observability-agent",
          "config": {
            "region": "us-west-2",
            "enableOTelAgent": true,
            "otelCollectorReplicas": 2
          },
          "notes": "Deploys OTel Collector agents in workload cluster to send telemetry to shared-services observability stack"
        }
      },
      "tags": {
        "Region": "us-west-2",
        "AccountType": "workloads",
        "IsPrimary": "false"
      }
    }
  },

  "deploymentOptions": {
    "parallel": false,
    "continueOnFailure": false,
    "rollbackOnFailure": true,
    "refresh": true
  }
}