{
    "name": "aws-ts-resilient-observability",
    "main": "index.ts",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:unit": "jest --config jest.config.js",
        "test:integration": "jest --config jest.integration.config.js",
        "test:integration:watch": "jest --config jest.integration.config.js --watch",
        "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
        "test:error-handling": "jest --testPathPattern='(error-handling|logging|deployment-error-handling)' --verbose",
        "test:error-recovery": "jest --testPathPattern='error-recovery' --config jest.integration.config.js --verbose",
        "test:all": "npm run test:unit && npm run test:integration",
        "automation": "ts-node automation/cli.ts",
        "deploy": "npm run automation deploy",
        "destroy": "npm run automation destroy",
        "preview": "npm run automation preview"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^18",
        "jest": "^29.5.0",
        "jest-junit": "^16.0.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@pulumi/aws": "^7.5.0",
        "@pulumi/awsguard": "^0.4.0",
        "@pulumi/awsx": "^3.0.0",
        "@pulumi/policy": "^1.10.0",
        "@pulumi/pulumi": "^3.113.0",
        "js-yaml": "^4.1.0"
    }
}
