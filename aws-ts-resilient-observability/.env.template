# Multi-Region Deployment Environment Variables
# Copy this file to .env and fill in your actual values

# Shared Services Account Role ARN
# This role should have permissions to create Transit Gateways, VPCs, EKS clusters, etc.
SHARED_SERVICES_ROLE_ARN=arn:aws:iam::SHARED-SERVICES-ACCOUNT-ID:role/PulumiExecutionRole

# Shared Services Account ID (needed for cross-account references)
SHARED_SERVICES_ACCOUNT_ID=SHARED-SERVICES-ACCOUNT-ID

# Workloads Account Role ARN  
# This role should have permissions to create VPCs, EKS clusters, RDS, Route53, etc.
WORKLOADS_ROLE_ARN=arn:aws:iam::WORKLOADS-ACCOUNT-ID:role/PulumiExecutionRole

# Workloads Account ID (needed for RAM resource sharing)
WORKLOADS_ACCOUNT_ID=WORKLOADS-ACCOUNT-ID

# Optional: Override default regions
# PRIMARY_REGION=us-east-1
# SECONDARY_REGION=us-west-2

# Optional: Override default domain for Route53
# ROUTE53_DOMAIN=workloads.example.com

# Optional: Override default CIDR blocks
# SHARED_HUB_VPC_PRIMARY_CIDR=10.0.0.0/16
# SHARED_HUB_VPC_SECONDARY_CIDR=10.2.0.0/16
# WORKLOADS_SPOKE_VPC_PRIMARY_CIDR=10.1.0.0/16
# WORKLOADS_SPOKE_VPC_SECONDARY_CIDR=10.3.0.0/16