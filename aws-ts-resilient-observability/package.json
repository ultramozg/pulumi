{
    "name": "aws-ts-resilient-observability",
    "main": "index.ts",
    "scripts": {
        "test": "jest --config jest.config.js",
        "test:watch": "jest --config jest.config.js --watch",
        "test:coverage": "jest --config jest.config.js --coverage",
        "test:unit": "jest --config jest.config.js",
        "test:integration": "jest --config jest.integration.config.js",
        "test:integration:watch": "jest --config jest.integration.config.js --watch",
        "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
        "test:error-handling": "jest --testPathPattern='(error-handling|logging|deployment-error-handling)' --verbose",
        "test:error-recovery": "jest --testPathPattern='error-recovery' --config jest.integration.config.js --verbose",
        "test:e2e": "jest --testPathPattern='end-to-end-deployment' --config jest.integration.config.js --verbose",
        "test:all": "npm run test:unit && npm run test:integration",
        "automation": "ts-node automation/cli.ts",
        "deploy": "npm run automation deploy",
        "destroy": "npm run automation destroy",
        "preview": "npm run automation preview",
        "run-all": "npm run automation run-all",
        "deploy-components": "npm run automation deploy-components",
        "validate": "npm run automation validate",
        "status": "npm run automation status",
        "rollback": "npm run automation rollback",
        "deploy:multi-region": "ts-node deploy.ts deploy",
        "destroy:multi-region": "ts-node deploy.ts destroy",
        "preview:multi-region": "ts-node deploy.ts preview"
    },
    "devDependencies": {
        "@types/dotenv": "^6.1.1",
        "@types/jest": "^29.5.0",
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^18",
        "jest": "^29.5.0",
        "jest-junit": "^16.0.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@pulumi/aws": "^7.10.0",
        "@pulumi/awsguard": "^0.4.0",
        "@pulumi/awsx": "^3.0.0",
        "@pulumi/cloudflare": "^6.11.0",
        "@pulumi/kubernetes": "^4.24.1",
        "@pulumi/policy": "^1.10.0",
        "@pulumi/pulumi": "^3.113.0",
        "dotenv": "^17.2.3",
        "js-yaml": "^4.1.0",
        "pulumi-namecheap": "^2.2.13"
    }
}
